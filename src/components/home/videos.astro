---
import Panel from "components/panel.astro";
import PanelItem from "components/panel_item.astro";
import PanelText from "components/panel_text.astro";
---

<Panel
    style="bg-gradient-to-br from-surgeOrange to-backgroundBlue text-neutral-200 [&_a]:text-white">
    <PanelItem>
        <div class="flex flex-col items-center p-8">
            <iframe
                class="aspect-video w-full"
                src="https://www.youtube-nocookie.com/embed/ipk5tRGnL2E"
                title="YouTube video player"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                allowfullscreen>
            </iframe>
            Roger Linn demonstrates Surge on his Linnstrument
        </div>
    </PanelItem>

    <PanelItem>
        <PanelText>
            <h1>Surge XT Videos</h1>
            <p>We have a collection of great demos on our YouTube channel.</p>
            <a href="https://www.youtube.com/channel/UCnnNU3VTqBMeUaemAZVWIFg"
                >Explore the videos!</a
            >
        </PanelText>
    </PanelItem>
</Panel>
