{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@public/*": ["public/*"],
            "@/*": ["src/*"],
            "@assets/*": ["src/assets/*"],
            "@includes/*": ["src/assets/includes/*"],
            "@components/*": ["src/components/*"],
            "@content/*": ["src/content/*"],
            "@css/*": ["src/css/*"],
            "@layouts/*": ["src/layouts/*"],
            "@pages/*": ["src/pages/*"]
        },
        "plugins": [{ "name": "@astrojs/ts-plugin" }]
    }
}
